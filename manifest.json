{
  "manifest_version": 2,
  "name": "Download Instagram Picture",
  "version": "0.1.1",
  "permissions": [
    "tabs",
    "downloads",
    "downloads.open",
    "https://instagram.flim10-1.fna.fbcdn.net/*",
    "https://instagram.com/*",
    "https://web.facebook.com/",
    "https://web.facebook.com/"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "jquery-3.2.1.slim.min.js",
        "content.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Credencial FdW",
    "default_icon": "ico.png",
    "default_popup": "popup.html"
  }
}
